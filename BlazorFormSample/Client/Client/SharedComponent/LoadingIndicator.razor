@typeparam TItem
@if (Entity == null)
{
    <div class="d-flex justify-content-center">
        <div class="spinner-border" role="status">
            <span class="sr-only">Loading...</span>
        </div>
    </div>
}
else
{
    @ChildContent
}

@code{
    [Parameter]
    public TItem Entity { get; set; }

    [Parameter]
    public RenderFragment ChildContent { get; set; }
}